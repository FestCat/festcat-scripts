#!/bin/bash
# audiollibre: Converteix un fitxer de text a mp3, separant els capítols i llegint-los amb Festival, afegint el nom de l'fitxer a l'etiqueta ogg del títol, i opcionalment l'autor
# Escrit per Paco Rivière http://pacoriviere.cat - Juny 2008 - Per a Ubuntu Hardy 8.04 - Llicència GNU\GPL
# Modificat per Sergio Oller sergioller@gmail.com - Agost 2011

DATADIR="__DATADIR__"
. ${DATADIR}/docfunctions
usage=usage_audiollibre
init_entorn # incialitza variables

# Parse arguments:
autor=
infile=
regex="/Capítol /"
oext="ogg"
voice="$DEFAULT_VOICE"

while getopts "ha:m:c:f:v:" option;
do
   case "$option" in
      h) 
         $usage
         exit 0
         ;;
      a) 
         autor="$OPTARG"
         ;;
      m) 
         setregex_divcapitols "$OPTARG"
         ;;
      c)
         regex="$OPTARG"
         ;;
      f)
         oext="$OPTARG"
         ;;
      v) 
         voice="$OPTARG"
         ;;
    [?]) 
         $usage
         exit ;;
   esac
done
shift $(($OPTIND - 1)) 

voice_exists "$voice" || voice="${DEFAULT_VOICE}"

valida_audio_ext "$oext"

if [ $# = 0 ]; then
   ${ECHO} "Cal indicar un fitxer de text."
   $usage
   exit 1
fi

infile="$1"
########

# Comproven que s'ha indicat un fitxer a convertir 
es_textfile "$infile"

outfile="$infile"
outdir=${outfile%.*}.dir

divcap_base=$(basename ${infile%.*})
divcap_pref="${outdir}/${divcap_base}-"

# Separem els capitols
${DIVCAPITOLS} -o "${outdir}" -f $divcap_pref -c "$regex" "${outfile}"

# Passem els capítols a oext
PISTA=0
${ECHO} "Passant a $oext..."
  for fitxer in "${divcap_pref}"* ;
  do
	PISTA=$[ $PISTA + 1 ]
 	${TEXT2AUDIO} -v "$voice" -a "$autor" -p "$PISTA" -f "$oext" "$fitxer"
  done
${ECHO} "Hem acabat"

